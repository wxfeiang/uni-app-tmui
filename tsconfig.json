{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": [
      "@dcloudio/types",
       "node",
       "pinia-plugin-persist-uni"
      ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "./src/*.vue",
    "./src/**/*.vue",
    "./src/*.nvue",
    "./src/**/*.nvue",
    "./src/*.ts",
    "./src/*.d.ts",
    "./src/**/*.ts",
    "src/**/*.tsx",
    "./typings/auto-imports.d.ts", // 导入上一步生成的配置文件
     "src/utils/*.js"  ]
}
